<div class="container">
  <div class="text-danger">
     <% if @book.errors.any? %>
    <h3>
      <%= pluralize(@book.errors.count, "error") %>
      prohibited this obj from being saved:
    </h3>
        <% @book.errors.full_messages.each do |message| %>
         <li><%= message %></li>
       <% end %>
       <% end %>
     </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
<%= form_for(@book) do |f| %>
  <h1>Editing Book</h1>
   <div class="field row">
    <label for="book_title">Title</label>
    <br>
     <%= f.text_field :title, autofocus: true, autocomplete: "title", class: "col-xs-12" %>
    </br>
   </div>
    <div class="field row">
    <label for="book_body">Opinion</label>
    <br>
    <%= f.text_field :body, autofocus: true, autocomplete: "body", class: "col-xs-12" %>
   </br>
   </div>
   <div class="actions">
   <%= f.submit 'Update Book',class: "btn btn-primary col-xs-12" %>
   </div>
<% end %>
 <%= link_to 'Show', book_path(@book.id) %>
 |
 <%= link_to 'Back', books_path %>
</div>
</div>
