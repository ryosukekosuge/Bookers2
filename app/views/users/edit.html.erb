<%= form_for(@user) do |f| %>
 <div class ="container">
  <h2>User info</h2>
   <div class="field">
    <label for="user_name">Name</label>
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
   </div>
   <div class="field">
   	<label for="user_image">image</label>
     <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
   </div>
    <div class="field">
    <label for="user_introduction">Introduction</label>
    <%= f.text_field :introduction, autofocus: true, autocomplete: "introduction" %>
   </div>
   <div class="actions">
   <%= f.submit 'Update User' %>
   </div>
 </div>

<% end %>