<div class ="container">
  <div class="text-success">
   <div class="flash"><%= flash[:notice] %></div>
</div>
<div class="flash"><%= flash[:update] %></div>
  <div class="row">
   <div class="col-xs-3">
    <h2>User info</h2>
     <table class="table">
      <%= attachment_image_tag user, :profile_image ,fallback:'no_image.jpg', size: "50x50" %>
      <tr>
       <th>name</th>
       <th><%= user.name %></th>
      </tr>
      <tr>
       <th>introduction</th>
       <th><%= user.introduction %></th>
      </tr>
     </table>
     <div class="row">
     <%= link_to " " , edit_user_path(user),  class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_19175" %>
     </div>
  <h2>New book</h2>
  <%= form_for (book) do |f| %>
   <div class="field row">
    <%= f.label :title %><br />
    <%= f.text_field :title, autofocus: true, autocomplete: "Title" %>
   </div>
   <div class="field row">
    <%= f.label :Opinion %><br />
    <%= f.text_field :body, autofocus: true, autocomplete: "body" %>
   </div>
   <div class="actions" >
    <%= f.submit "Create Book" %>
   </div>
  <% end %>
  </div>
 </div>
</div>