<div class ="container">
 <div class="row">
  <div class="col-xs-3">
  <%= render 'users/userinfo', user: @user %>
  </div>
  <div class = "col-xs-9">
  <h2>Users</h2>
   <table class="table">
    <thead>
     <tr>
      <th>image</th>
      <th>name</th>
      <th colspan= "2"></th>
     </tr>
   <% @users.each do |user| %>
    <tr>
     <td>
      <%= attachment_image_tag user, :profile_image , format: "jpeg" , fallback:'no_image.jpg' ,size:'50x50' %>
     </td>
     <td><%= user.name %></td>
     <td>
  	 <%= link_to " show" , user_path(user.id),  class: "glyphicon glyphicon-default " %>
  	 </td>
     <% end %>
    </tr>
    </thead>
   </table>
  </div>
 </div>
</div>