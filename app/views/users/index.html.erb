<div class ="container">
   <div class="text-danger">
     <% if @book.errors.any? %>
    <h3>
      <%= pluralize(@book.errors.count, "error") %>
      prohibited this obj from being saved:
    </h3>
        <% @book.errors.full_messages.each do |message| %>
         <li><%= message %></li>
       <% end %>
       <% end %>
     </div>
 <div class="row">
  <div class="col-xs-3">
  <%= render 'users/userinfo', {user: @user, book: @new}  %>
  </div>
  <div class = "col-xs-9">
  <h2>Users</h2>
   <table class="table">
    <thead>
     <tr>
      <th>image</th>
      <th>name</th>
      <th colspan= "2"></th>
     </tr>
   <% @users.each do |user| %>
    <tr>
     <td>
      <%= attachment_image_tag user, :profile_image,:fill, 50, 50, fallback:'no_image.jpg' ,size:'50x50' %>
     </td>
     <td><%= user.name %></td>
     <td>
  	 <%= link_to "Show" , user_path(user.id),  class: "glyphicon glyphicon-default " %>
  	 </td>
     <% end %>
    </tr>
    </thead>
   </table>
  </div>
 </div>
</div>